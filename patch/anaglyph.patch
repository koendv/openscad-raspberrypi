+
+// set viewport
+$vpt=[68, 88, 5];
+$vpr=[0, 0, 0];
+$vpd=550;
+
+function hsv_deg(h, s, v) = hsv(h/360,s/100,v/100, 1);
+function hsv(h, s = 1, v = 1, a = 1, p, q, t) = (p == undef || q == undef || t == undef) // by LightAtPlay
+	? hsv(
+		(h%1) * 6,
+		s<0?0:s>1?1:s,
+		v<0?0:v>1?1:v,
+		a,
+		(v<0?0:v>1?1:v) * (1 - (s<0?0:s>1?1:s)),
+		(v<0?0:v>1?1:v) * (1 - (s<0?0:s>1?1:s) * ((h%1)*6-floor((h%1)*6))),
