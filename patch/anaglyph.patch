+	h < 1 ? [v,t,p,a] :
+	h < 2 ? [q,v,p,a] :
+	h < 3 ? [p,v,t,a] :
+	h < 4 ? [p,q,v,a] :
+	h < 5 ? [t,p,v,a] :
+	        [v,p,q,a];
